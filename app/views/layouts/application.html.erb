<!DOCTYPE html>
<html>
  <head>
    <title>LoginPrac</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-bar">
      <div class="nav-bar-logo">
        <%= link_to "R", root_path, class: "logo" %>
      </div>
      <div class="nav-bar-links">
        <% if session[:user_id].nil? %>
          <%= link_to "Home", root_path, class: "link" %>
        <% else %>
          <%= link_to "Home", {controller: "user", action: "index"}, class: "link" %>
        <% end %>
        <% if session[:user_id].nil? %>
          <div class="sign-in-options">
            <%= link_to "Log In", {controller: "login", action: "index"}, class: "btn" %>
            <%= link_to "Sign Up", {controller: "signup", action: "index"}, class: "btn blue last-btn" %>
          </div>
        <% else %>
          <%= link_to "log Out", {controller: "logout", action: "index"}, class: "btn-logout last-btn" %>
        <% end %>
      </div>
    </nav>
    
    <main>
      <%= yield %>
    </main>

    <footer>
    </footer>
  </body>
</html>
