<div class="main-container img">
    <div class="overlay">
        
    </div>
</div>

<%= link_to "+", {controller: "post", action:"new"}, id: "new-post" %>

        <div class="container">
            
            <div class="profile-container">
                <% if @user.profile_pic.attached? %>
                    <%= image_tag @user.profile_pic, class: "profile-pic" %>
                <% end %>
                <h1 class="main-container-title">Welcome <%= @user.name %></h1>
            </div>
            
            <div class="posts-container">
                <% @posts.each do |post| %>
                    <div class="post-container">
                        <div class="user-info">
                            <% if post.user.profile_pic.attached? %>
                                <%= image_tag post.user.profile_pic, class: "user-pic" %>
                            <% end %>
                                <%= link_to post.user.name, user_path(post.user), class: "user-name" %>
                        </div>
                        <hr>
                        <h2 class="post-title"><%= link_to post.title, post_path(post), class: "post-title" %></h2>
                        <h3 class="post-body"><%= post.body %></h3>
                    </div>
                <% end %>
            </div>
        </div>