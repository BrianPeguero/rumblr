<div class="main-container blue">
    <div class="form-container">

        <h1 class="form-title">New Post</h1>
        <%= form_for(:post, url: {controller: "post", action: "create"}) do |f| %>
            <%= f.text_field :title, placeholder: "Title", class: "input-field" %> <br>
